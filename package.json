{
  "private": true,
  "name": "codestage",
  "version": "0.0.1",
  "description": "Hassle free code highlighting macOS helper app for your Keynote slides",
  "main": "src/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "premake": "npm run icon",
    "make": "electron-forge make",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "electron": "electron .",
    "lint": "eslint src/",
    "icon:export": "sketchtool export slices design/icon.sketch --output=./resources/icon.iconset",
    "icon:create": "iconutil -c icns ./resources/icon.iconset",
    "menuicon:export": "sketchtool export artboards design/iconTemplate.sketch --output=resources",
    "icon": "npm run icon:export && npm run icon:create && npm run menuicon:export",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["git-exec-and-restage eslint --fix --", "jest --findRelatedTests --bail"],
    "*.{js,json,css,md}": "git-exec-and-restage prettier --write --"
  },
  "keywords": [],
  "author": "Andrey Okonetchnikov <andrey@okonet.ru>",
  "license": "MPL-2.0",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "brace": "^0.11.0",
    "electron-clipboard-watcher": "^1.0.1",
    "electron-compile": "^6.4.2",
    "electron-debug": "^1.1.0",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.13",
    "electron-positioner": "^3.0.0",
    "electron-redux": "^1.3.1",
    "electron-settings": "^3.1.4",
    "electron-squirrel-startup": "^1.0.0",
    "execa": "^0.8.0",
    "grid-styled": "^2.0.0-11",
    "hazardous": "^0.3.0",
    "highlight-rtf-renderer": "file:./lib",
    "key-event-to-string": "^1.1.1",
    "node-notifier": "^5.1.2",
    "react": "^15.4.2",
    "react-ace": "^5.8.0",
    "react-desktop": "^0.3.3",
    "react-dom": "^15.4.2",
    "react-frame-component": "^2.0.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.5",
    "react-virtualized": "^9.14.1",
    "react-with-timer-hoc": "^0.2.3",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "strip-indent": "^2.0.0",
    "styled-components": "^2.3.3",
    "system-font-families": "^1.0.0",
    "warning": "^3.0.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "electron-devtools-installer": "^2.2.3",
    "electron-forge": "^4.1.6",
    "electron-prebuilt-compile": "1.8.2-beta.3",
    "eslint": "^3.19.0",
    "eslint-config-okonet": "^4.0.2",
    "git-exec-and-restage": "^1.0.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  },
  "config": {
    "forge": {
      "make_targets": {
        "darwin": ["zip"]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "resources/icon",
        "ignore": [".idea", "coverage"],
        "appBundleId": "com.koolesache.CodeStage",
        "appCategoryType": "public.app-category.productivity",
        "asar": {
          "unpackDir": "{src/scripts,node_modules/node-notifier/vendor}"
        }
      },
      "electronWinstallerConfig": {
        "name": "codestage"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "okonet",
        "name": "codestage"
      }
    }
  }
}
